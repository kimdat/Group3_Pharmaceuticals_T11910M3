    <script type="text/javascript">
        $('input[name="genders[]').change(function () {

            var atLeastOneIsChecked = $('input[name="genders[]"]:checked');
            $('input[name="genders').val(atLeastOneIsChecked.val());

        });


        function equalize() {
            //var currentactive = $('.active').attr("id");
            //      alert(currentactive.text());


            $('.carousel').on('slide.bs.carousel', function onSlide(ev) {
                var id = ev.relatedTarget.id;

                switch (id) {
                    case "1":
                        $("#p1").removeClass('complete').addClass('active');
                        $("#p2").removeClass('complete').removeClass('active');
                        $("#p3").removeClass('complete').removeClass('active');
                        $("#prev").css('visibility', 'hidden');
                        $("#next").text("next");
                        $("#next").attr("data-slide", "next");
                        //  $('input[name="submitRegister').removeClass("btn-primary");
                        $('input[name="submitRegister').attr("type", "hidden");
                        $("#next").show();
                        break;
                    case "2":
                        $("#p1").removeClass('active').addClass('complete');
                        $("#p2").removeClass('complete').addClass('active');
                        $("#p3").removeClass('complete').removeClass('active');
                        $("#prev").css('visibility', 'visible');
                        $("#next").text("next");
                        $("#next").attr("data-slide", "next");
                        $("#next").show();
                        //  $('input[name="submitRegister').removeClass("btn-primary");
                        $('input[name="submitRegister').attr("type", "hidden");
                        //$("#next").removeAttr('onclick');
                        break;
                    case "3":

                        $("#p1").removeClass('active').addClass('complete');
                        $("#p2").removeClass('active').addClass('complete');
                        $("#p3").removeClass('complete').addClass('active');
                        $("#prev").css('visibility', 'visible');
                        $("#next").text("submit");
                        $("#next").removeAttr("data-slide");
                        //  $('input[name="submitRegister').addClass("btn-primary");
                        $("#next").hide();
                        $('input[name="submitRegister').attr("type", "submit");
                        //   $("#next").attr('type', "submit");
                        break;
                    default:
                    //the id is none of the above
                }
            })


        }
        function openCity(evt, cityName) {

            var i, tabcontent, tablinks;
            tabcontent = document.getElementsByClassName("tabcontent");
            for (i = 0; i < tabcontent.length; i++) {
                tabcontent[i].style.display = "none";
            }
            tablinks = document.getElementsByClassName("tablinks");
            for (i = 0; i < tablinks.length; i++) {
                tablinks[i].className = tablinks[i].className.replace(" active", "");
            }
            document.getElementById(cityName).style.display = "block";
            evt.currentTarget.className += " active";

        }

        // Get the element with id="defaultOpen" and click on it
        document.getElementById("defaultOpen").click();
    </script>

